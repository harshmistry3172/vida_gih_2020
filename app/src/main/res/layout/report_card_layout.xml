<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/report_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cardiology Health Report"
                android:textColor="@color/black"
                android:fontFamily="@font/product_sans_font"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_margin="20dp"/>

            <TextView
                android:id="@+id/report_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08/02/2020"
                android:textColor="@color/gray"
                android:fontFamily="@font/product_sans_font"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/save_report_btn"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Save as PDF"
            android:textColor="@color/blue"
            android:background="@drawable/light_blue_bg"
            android:elevation="0dp"
            android:layout_marginTop="43dp"/>

    </LinearLayout>

</LinearLayout>